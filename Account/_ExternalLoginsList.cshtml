@if (OAuthWebSecurity.RegisteredClientData.Count == 0) {
    <div class="message-info">
        <p>
            Aucun service d'authentification externe n'est configuré. Consultez <a href="http://go.microsoft.com/fwlink/?LinkId=226949">cet article</a>
            pour découvrir comment configurer cette application ASP.NET afin de vous connecter via des services externes.
        </p>
    </div>
} else {
    <form method="post">
    @AntiForgery.GetHtml()
    <fieldset id="socialLoginList">
        <legend>Se connecter en utilisant un autre service</legend>
        <p>
            @foreach (var client in OAuthWebSecurity.RegisteredClientData) {
                <button type="submit" name="provider" value="@client.AuthenticationClient.ProviderName"
                        title="Se connecter avec le compte @client.DisplayName">@client.DisplayName</button>
            }
        </p>
    </fieldset>
    </form>
}
